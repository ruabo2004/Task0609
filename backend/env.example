# ================================================
# HOMESTAY MANAGEMENT BACKEND - ENVIRONMENT VARIABLES
# Copy this file to .env and update the values
# ================================================

# ================================================
# SERVER CONFIGURATION
# ================================================
NODE_ENV=development
PORT=5000
API_VERSION=v1

# ================================================
# DATABASE CONFIGURATION (MySQL)
# ================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=homestay_db

# ================================================
# JWT CONFIGURATION
# ================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-long-and-secure
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
JWT_ISSUER=homestay-api
JWT_AUDIENCE=homestay-client

# ================================================
# RATE LIMITING
# ================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================================
# FILE UPLOAD CONFIGURATION
# ================================================
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,webp

# ================================================
# LOGGING CONFIGURATION
# ================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs

# ================================================
# CACHE CONFIGURATION
# ================================================
CACHE_TTL=300000
CACHE_MAX_SIZE=1000

# ================================================
# PERFORMANCE MONITORING
# ================================================
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
SLOW_API_THRESHOLD=2000

# ================================================
# SECURITY CONFIGURATION
# ================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
TRUSTED_PROXIES=127.0.0.1,::1

# ================================================
# PAYMENT GATEWAY CONFIGURATION (VNPay)
# ================================================
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_SECRET_KEY=your_vnpay_secret_key
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:5000/api/payments/vnpay/return

# ================================================
# CORS CONFIGURATION
# ================================================
CORS_ORIGIN=http://localhost:5173
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ================================================
# EMAIL CONFIGURATION (Optional)
# ================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=vietze.com@gmail.com
EMAIL_PASS=kfdzlibehgvenlaf
EMAIL_FROM=Homestay Management <noreply@homestay.com>
EMAIL_TEMPLATES_PATH=./templates/emails

# ================================================
# REDIS CONFIGURATION (Optional - for production caching)
# ================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================================
# EXTERNAL SERVICES
# ================================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
WEATHER_API_KEY=your-weather-api-key

# ================================================
# BACKUP CONFIGURATION
# ================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ================================================
# DEVELOPMENT TOOLS
# ================================================
ENABLE_SWAGGER=true
ENABLE_GRAPHQL=false
DEBUG_SQL=false