# ================================================
# HOMESTAY FRONTEND - ENVIRONMENT VARIABLES
# Copy this file to .env and update the values
# ================================================

# ================================================
# API Configuration
# ================================================
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000

# ================================================
# Application Configuration
# ================================================
VITE_APP_NAME=Homestay Management
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern Homestay Management System

# ================================================
# Authentication Configuration
# ================================================
VITE_JWT_STORAGE_KEY=homestay_token
VITE_REFRESH_TOKEN_KEY=homestay_refresh_token
VITE_TOKEN_EXPIRY_CHECK_INTERVAL=60000

# ================================================
# File Upload Configuration
# ================================================
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp
VITE_UPLOAD_URL=http://localhost:5000/uploads

# ================================================
# External Services
# ================================================
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_GOOGLE_ANALYTICS_ID=your-google-analytics-id

# ================================================
# Development Configuration
# ================================================
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false
VITE_MOCK_API=false

# ================================================
# Feature Flags
# ================================================
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_PWA=false
VITE_ENABLE_ANALYTICS=false

# ================================================
# Payment Configuration
# ================================================
VITE_VNPAY_RETURN_URL=http://localhost:5173/payment/result
VITE_CURRENCY=VND
VITE_CURRENCY_SYMBOL=₫

# ================================================
# Contact Information
# ================================================
VITE_CONTACT_EMAIL=iezreal.com@gmail.com
VITE_CONTACT_PHONE=0886520846
VITE_CONTACT_ADDRESS=123 Phú Diễn, Nam từ liêm, Hà Nội

# ================================================
# Social Media
# ================================================
VITE_FACEBOOK_URL=https://facebook.com/homestay
VITE_INSTAGRAM_URL=https://instagram.com/homestay
VITE_TWITTER_URL=https://twitter.com/homestay
